# clangd configuration for ESL client library (C23)
CompileFlags:
  Add:
    - -xc              # force C language to avoid ObjC++ fallback
    - -std=c23
    - -I
    - src/include
    - -Wall
    - -Wextra
    - -Wpedantic
    - -Werror
    - -pthread
Diagnostics:
  ClangTidy:
    Add:
      - clang-analyzer-*  # static analysis for common defects
